{
    "name": "mrshanebarron/editor",
    "description": "Trix-based rich text editor component for Laravel with Livewire, Blade, and Vue support",
    "keywords": ["laravel", "editor", "trix", "rich-text", "wysiwyg", "livewire", "blade", "vue"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shane Barron",
            "email": "mrshanebarron@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelDesign\\Editor\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelDesign\\Editor\\EditorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
